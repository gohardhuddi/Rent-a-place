<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneAuthentication"
    android:background="@drawable/mainb"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/rentup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_mono_bold"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Rentup"
            android:textColor="#fff"
            android:textSize="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rentup"
            android:fontFamily="@font/ubuntu_mono"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Phone no Verification"
            android:textColor="#fff"
            android:textSize="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.7"
        android:background="@drawable/ffd">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/para"
                android:textSize="15dp"
                android:layout_marginBottom="50dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                app:hintAnimationEnabled="true">
                <EditText
                    android:singleLine="true"
                    android:textSize="25dp"
                    android:fontFamily="@font/ubuntu_mono"
                    android:id="@+id/etcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Code"
                    android:textColor="@color/colorAccent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:fontFamily="@font/ubuntu_mono"
                android:id="@+id/btnregister"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/button_rounded"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/cardview_light_background">
        <TextView
            android:fontFamily="@font/ubuntu_mono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Version 1.0 Alpha"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>